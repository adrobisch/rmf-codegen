#%RAML 1.0
title: property query parameter placeholder annotation rule

annotationTypes:
    placeholderParam: object

/products:
    get:
        queryParameters:
            /text.[a-z]{2}/?:
                (placeholderParam):
                    paramName: text
                    template: text.<locale>
                    placeholder: locale
                type: string
            /foo.[a-z]{2}/?:
                (placeholderParam):
                    paramName: foo
                    template: foo.<locale>
                    placeholder: locale
                type: string
                description: foo
            filter:
                type: string
            /invalid/?:
                type: string
            /incomplete.[a-z]{2}/?:
                (placeholderParam):
                    paramName: text
                type: string
            /invalidplaceholder.[a-z]{2}/?:
                (placeholderParam):
                    paramName: text
                    template: text.en
                    placeholder: locale
                type: string
            /invalidfoo/?:
                type: string
                description: foo
            /incompletefoo.[a-z]{2}/?:
                (placeholderParam):
                    paramName: text
                type: string
                description: foo
            /invalidplaceholderfoo.[a-z]{2}/?:
                (placeholderParam):
                    paramName: text
                    template: text.en
                    placeholder: locale
                type: string
                description: foo
